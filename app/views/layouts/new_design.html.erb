<script type="text/javascript">
	function on_focus(this_obj){
		if(this_obj.value=='Search by name or zip code'){
			this_obj.value=''; 
			this_obj.style.color='#000';
		}
	}
	function on_blur(this_obj){
		if(this_obj.value==''){
			this_obj.value='Search by name or zip code'; 
			this_obj.style.color='#999'; 
		}
	} 
	function on_click(){
		if($('searchoption').value != '' && $('searchfield').value != '' && $('searchfield').value != 'Search by name or zip code') { 
		document.search_form.submit();
		}
	}
	
</script>
