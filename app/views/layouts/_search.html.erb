<div id='navbar' <%= current_page?(:controller => "home", :action => "index") ? "class='home'" : nil %>>
<div id='searchbar' style="background: #F8F8F9;z-index: 900;">
<% form_tag "/search", :name => 'search_form', :method=>'get' do %>
	<table border="0" cellpadding="0" cellspacing="0" align="right" style='background: #F8F8F9; z-index: 900;' >
		<tr>
			<td  align='left' valign='bottom' style='font-size:0.8em;font-family:"Verdana",sans-serif' >I'm looking for a:</td>
			<td  align='left' valign='bottom'>
				<select id='searchoption' name='searchoption' style='font-size:0.8em; width:70px;height:21px'>
					<option value="sitter">Sitter</option>
					<option value="parent">Family</option>
				</select>
			</td>
			<td>&nbsp;</td>
			<td valign='top'> 
				<input id='searchfield' type="text" name="search" id="search" value="Search by name or zip code" size='40' onFocus="if(this.value=='Search by name or zip code'){this.value=''; this.style.color='#000';}; " onBlur="if(this.value==''){this.value='Search by name or zip code'; this.style.color='#999'; };"/>
				<div id='searchbutton' onclick="if($('searchoption').value != '' && $('searchfield').value != '' && $('searchfield').value != 'Search by name or zip code') { document.search_form.submit();};" ></div>
			</td>
		</tr>
	</table>
<% end %>
</div>
			
</div>