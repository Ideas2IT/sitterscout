	{
		return false;
	}
	
	return true;
}

function validate_first_name(field)
{
	
	if (field.length<2) 
	{
		return false;
	}
	
	return true;
}


	function toggle_cell_star(box)
	{

		if(box.checked)
		{
			$('cell_phone_star').show()
			$('text_message_span').show()
		}
		else
		{
			$('cell_phone_star').hide()
			$('text_message_span').hide()
		}
	}
	</script>
</div>
