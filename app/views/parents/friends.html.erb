

<%= render :partial => 'nav_menu', :locals => {:selected => "friend"} %>
<div id="sub_menu_gradient">
	
</div>
<div id="content" style="height: 900px; margin-bottom: 200px; padding-bottom: 200px;">


<div class="colmask leftmenu">
	<div class="colleft">
		<div class="col1">
			<!-- Column 1 start -->
			<span style=' font-size: .9em; font-weight: bold'>People You May Know:</span>
			<% for search in @parents do %>
				<% unless search.nil? || search.profile.nil? %>
				<div id="person_<%=search.id %>">
						<div style="position: absolute; left: 210px; margin-top: 10px"><%= link_to_remote(image_tag("default/qtip/close.gif", :border => 0), :url => remove_person_parent_path(search.id))  %></div>
			<table style="border: 1px solid #ADACAD; margin-top: 5px; padding: 3px; background-color: #FFFFFF" id="person_<%=search.id %>_table">
			<tr>
				<td colspan="2">
					<strong style=" font-size: .8em;">
					<%= search.profile.first_name %>&nbsp;<%= search.profile.last_name %></strong>
				</td>
			</tr>
			<tr>
				<td width="52">
					<%= image_tag(search.avatar_photo_url(:thumb), :border => 0) %>
				</td>
				<td>
					<table>
					<tr>
						<td valign="top" width="163" style=" font-size: .6em; padding-left: 2px">
								<h4>Connections You Share:</h4>
								<%= current_user.shared_connections(search).collect(&:full_name).join(", ") %>
							</td>
					</tr>
					<tr>
						<td valign="top" width="163" style=" font-size: .6em; padding-left: 2px">
							<h4>Tags You Share:</h4>
							<%= current_user.shared_tags(search).collect(&:name).join(", ") %>
						</td>
					</tr>
					</table>
				</td>
			<tr>
				<td colspan="2" style=" font-size: .6em; padding-left: 12px">
				<%= link_to "View Profile", url_for(view_profile_parent_path(search.id)) %> | <%= link_to "Add to Your Friends", url_for(:controller => 'connections', :action => 'add_friend', :id => search.id), :class => 'lbOn-300-270' %>
					<% if current_user.connected?(search) %> 
						| <%= link_to "View Connections", url_for(:controller => 'connections', :action => 'show', :id => search.id), :class => "lbOn-405-390" %>
					<% end %>
				</td>
		</table>
		</div>
	<% end %>
<% end %>
			<!-- Column 1 end -->
		</div>
		<div class="col2">

		<span style=' font-size: .9em; font-weight: bold'>Your Friends:</span>
			<div style="width: 465px; margin-top: 5px; font-size: .8em">
			<% if @confirmed_friends.size < 1 %>
			You currently have no friends.
			<% end %>
			
			
			<% @confirmed_friends.each do |f| %>
			<% unless f.friend.profile.nil? %>
				<% if f.friend.profile.parent? %>
				<div style="width: 98%; border: 1px solid #ADACAD; padding: 5px; margin-bottom: 5px; background-color: #FFFFFF">
			<table>
			<tr>
			  <td>
			  <%= link_to(image_tag(f.friend.avatar_photo_url, :class => "right", :border => 0),url_for(view_profile_parent_path(f.friend.id)))  %>
			  </td>

			  <td style="padding: 3px;" valign="top">
			  <%
						hide_connection = Friendship.find(:first, :conditions => ["user_id = ? AND friend_id = ?", current_user, f.friend.id], :limit => 1).hide_connection
						checked = hide_connection ? "checked='checked'" : ""
					%>
					<div id="hide_<%= f.friend.id %>_div" style="float: right; margin-top: -6px;"><input name="hide_<%= f.friend.id %>" <%=checked %> id="hide_<%= f.friend.id %>" type="checkbox" value='1' /> Hide Friend 
					
						<a href="#" title="If you check the box, this Friend will not be displayed when others “View Your Connections”."><img src="/images/QuestionMark_transp.gif" border=0></a>
						</div>
						<%= observe_field "hide_#{f.friend.id}", :url => hide_sitter_connection_parent_path(current_user),
						     :frequency => 2,
						     :with => "'sitter_id=#{f.friend.id}&hide_connection='+value"
						     %>
						
			   <strong style="font-size: 1em;"><%= link_to(f.friend.profile.first_name + " " + f.friend.profile.last_name, url_for(view_profile_parent_path(f.friend.id))) %></strong><br/>
			  <%= f.friend.profile.city %>, <%= f.friend.profile.state.name %><br />
				<strong>Tags: </strong><%= truncate(f.friend.profile.tag_list.to_s, 38, "...") %>
				 <% if(f.friend.profile.tag_list.to_s.size > 38) %>
				 
					<%= link_to "More", "#", :onmouseover =>"TagToTip('#{f.friend.id}_tip', ABOVE, true, BALLOON, true)", :onmouseout => "UnTip()", :style => "color: #C21D7F;" %>
					<div id="<%= f.friend.id %>_tip" style="display: none;"><%= f.friend.profile.tag_list.to_s %></div>
										<% end %>
	
			  <div valign="top" style=" font-size: .8em; margin-top: 18px;">
			    <%= link_to "View Profile", url_for(view_profile_parent_path(f.friend.id)) %> |

			    <%= link_to "View Connections", url_for(:controller => 'connections', :action => 'show', :id => f.friend.id), :class => "lbOn-405-390" %> |

				<%= link_to "Send Message", compose_parent_path(current_user, :to_id => f.friend.id) %> |

			    <%= link_to "Remove Friend", url_for(:controller => 'connections', :action => 'decline', :id => f.friend.id), :confirm => "Are you sure you want to remove this friend?" %>
			  </div>
			</tr>
			</table>
			</div>
				<% end %>
				<% end %>
			<% end %>


		</div>
		<br />
		<span style=' font-size: .9em; font-weight: bold'>Awaiting Confirmation:</span>
			<div style="width: 465px; font-size: .8em; margin-bottom: 50px;">
			<% if @unconfirmed_friends.blank? %>
		You are not awaiting confirmation from any friends.
			<% end %>

			<% @unconfirmed_friends.each do |f| %>
				<% unless f.friend.profile.nil? %>
					<% if f.friend.is_a?Parent %>
						<div style="width: 98%; border: 1px solid #ADACAD; padding: 5px; margin-bottom: 5px; background-color: #FFFFFF">
							<table>
								<tr>
									<td>
						  		<%= image_tag(f.friend.avatar_photo_url) %>

									</td>
					  			<td style="padding: 5px;" valign="top">
						    <span style=" font-size: 1em; font-weight: bold;"><%= f.friend.profile.first_name %>&nbsp;<%= f.friend.profile.last_name %></span><br/>

									<%= f.friend.profile.city %>, <%= f.friend.profile.state.name %><br />

						  		<div style=" font-size: .8em; margin-top: 18px;">
						    <%= link_to "View Connections", url_for(:controller => 'connections', :action => 'show', :id => f.friend.id), :class => "lbOn-405-390" %>
						  	|
						    <%= link_to "Remove Friend", url_for(:controller => 'connections', :action => 'decline', :id => f.friend.id), :confirm => "Are you sure you want to remove this friend?" %>
								</div>
								</td>
							</tr>
							</table>
						</div>
					<% end %>
			  <% end %>
			<% end %>

		</div>

			<!-- Column 2 end -->
		</div>
	</div>
	
</div>

		<div style="position: absolute; margin-left: 775px;top: 275px;">
				<%= render :partial => '/shared/share_a_sale' %>
				</div>

</div>
<%#= render :partial => 'shared/profile_percentage' %>
