			<p><label for="password_confirmation">Confirm Password</label><br/>
			<%= password_field :user, :password_confirmation %></p>


		<%= image_submit_tag '/images/parent_home/SaveChanges_bttn.gif', :name => 'login_update', :style => "margin-left: 55px; margin-top: 15px;" %>
		</div>
</div>
<% end %>
