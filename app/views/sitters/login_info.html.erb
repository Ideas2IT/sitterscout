<% form_tag sitter_path, :method => :put do %>
<div class="splitcontentleft" style="font-size: .8em; margin-top: 10px;">
		<div class="box tabular" style="margin-left: 30%">

			<p><label for="email">Email</label><br/>
			<%= text_field :user, :email %></p>

			<p><label for="password">Password</label><br/>
