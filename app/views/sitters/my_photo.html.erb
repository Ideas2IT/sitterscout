<%= render :partial => 'nav_menu',  :locals => {:selected => "profile"} %>
<div id="sub_menu_gradient">
	<div class="sub_menu_gradient_center">
		<%= render :partial => 'profile_menu' %>
	</div>
<div>
<div id="content" style="height: 700px;">	
	<div class='box alt first_alt'>
	<% form_tag sitter_path(current_user), :method => 'put', :multipart =>true, :class => 'MainForm' do %>
		<%= render :partial => 'shared/my_photo' %>
		<input type="submit" name="update_avatar" id="profile_submit" style="display: none;"  />
	<% end %>
		<div style="cursor: pointer;" onclick="validate();">
			<%= image_tag '/images/parent_home/SaveChanges_bttn.gif', :style=> "margin: 10px 0 0 275px;" %>
		</div>
	</div>
</div>		

<%#= render :partial => 'shared/profile_percentage' %>	

<script type="text/javascript">


function validate()
{
	
		$('flash_notice').innerHTML = '';
		
	
		if($('avatar_uploaded_data').value != '' && !$('photo_permission').checked)
		{
			$('flash_notice').innerHTML = '<div id="notice_error">Please certify that you have the right to distribute this picture and that it does not violate the Terms of Use.</div>';
			
				path_to_root_dir = "<%= APP_URL %>/";
				var myBox = new GlassBox();
				myBox.init( 'notice_error', '360px', '100px', 'hidden', 'facebookstyle', true, true );
				myBox.lbo( false, 0.01 ); 
				myBox.appear(5000);
			
			return false;
		}
	
	
		$('profile_submit').click();
	
}

</script>